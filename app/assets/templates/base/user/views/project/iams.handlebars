{{#if controllers.project}}
{{#if controllers.project.ProjectAdmin}}
    <div class="row col-lg-12">
    <div class="col-lg-1">
        <a id="add" class="btn btn-danger btn-lg"  data-target="#create" {{bind-attr-i18n data-original-title="project.invite_user_tooltip"}} data-toggle="collapse">
            <i class="fa fa-plus"></i>
            Invite User
        </a>
    </div>

    <div class="col-lg-1">&nbsp;</div>
