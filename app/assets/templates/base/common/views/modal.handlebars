<!-- Modal -->

<div class="modal-dialog"  {{bindStyle unit="px" width=view.customWidth}}>
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">{{view.title}}</h4>
        </div>
        <div class="modal-body row col-lg-12">
            {{#if errorMsg}}
                <div class="alert alert-danger">
                        {{errorMsg}}
                </div>
            {{else}}
            {{/if}}
            {{#if view.tpl}}
                {{view App.GenericView content=view.content getAppElementId=view.getAppElementId template_name=view.tpl controllerBinding=view.controller}}
            {{else}}
                <p>{{view.content}}</p>
            {{/if}}

            <div class="col-lg-12 top42">
            </div>
        </div>
        <div class="modal-footer">
            {{#if view.cancelEnabled}}
                <button type="button" {{action close target="view"}} class="btn btn-default" data-dismiss="modal">{{view.cancelText}}</button>
            {{else}}
                <button type="button" {{action close target="view"}} class="btn btn-default hidden" data-dismiss="modal">{{view.cancelText}}</button>
            {{/if}}
            <button type="button" {{action save target="view"}} class="btn btn-primary">{{view.saveText}}</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->